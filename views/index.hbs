<div class="col-md-6">
    <h2>Burgers to be Hit</h2>

    <ul id="notDevoured" class="list-group">
        {{#each burgers}}
        {{#unless this.devoured}}
        <li data-name="{{ this.burger_name }}" data-id="{{ this.id }}" class="list-group-item">
            {{ this.burger_name }}
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-md-6">
    <h2>Burgers Devoured</h2>

    <ul id="devoured" class="list-group">
        {{#each burgers}}
        {{#if this.devoured}}
        <li data-name="{{ this.burger_name }}" data-id="{{ this.id }}" class="list-group-item">
            {{ this.burger_name }}
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>